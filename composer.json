{
    "name": "happycog/craft-mcp",
    "description": "A MCP server for Craft CMS",
    "license": "proprietary",
    "type": "craft-plugin",
    "require": {
        "php-mcp/server": "^3.2",
        "cuyz/valinor": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "happycog\\craftmcp\\": "src/"
        },
        "files": [
            "src/helpers/functions.php"
        ]
    },
    "authors": [
        {
            "name": "markhuot",
            "email": "mark@markhuot.com"
        }
    ],
    "extra": {
        "name": "MCP",
        "description": "A MCP server for Craft CMS",
        "handle": "mcp",
        "version": "1.0.0",
        "class": "happycog\\craftmcp\\Plugin"
    },
    "require-dev": {
        "markhuot/craft-pest-core": "dev-phpunit-db-overrides",
    "phpstan/phpstan": "*",
        "craftcms/phpstan": "dev-main"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpstan": "phpstan --memory-limit=1G",
        "phpstan-baseline": "phpstan --generate-baseline --memory-limit=1G"
    },
    "config": {
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true,
            "pestphp/pest-plugin": true
        }
    }
}
